{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "outDir": "build",
    "baseUrl": ".",
    "rootDir": "./src",
    "paths": {
      "*": ["node_modules/*"],
      "@src/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"],
}
